<%@ CodePage = 65001 %>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>插入表格</title>
<link href="/css/editor.css" rel="stylesheet" type="text/css">
<link href="/css/popup.css" rel="stylesheet" type="text/css">
<script language="JavaScript" type="text/JavaScript">
<!--
function MM_openBrWindow(theURL,winName,features) { //v2.0
  window.open(theURL,winName,features);
}
//-->
</script>
</head>

<body>
<div id="PopFormName">插入表格</div>
<form action="" method="" id="PopForm">
  <h1>基本設定</h1>
  <table cellspacing="0">
  <tr>
    <td class="Label">欄數        </td>
    <td><input name="textfield" type="text" class="InputText" size="4"></td>
    <td class="Label">列數</td>
    <td><input name="textfield" type="text" class="InputText" size="4"></td>
  </tr>
  <tr>
    <td class="Label">表格寬度</td>
    <td><input name="textfield" type="text" class="InputText" size="4">
%</td>
    <td class="Label">邊框</td>
    <td><input name="textfield" type="text" class="InputText" size="4">
  pixel</td>
  </tr>
  <tr>
    <td class="Label">內距cell padding </td>
    <td><input name="textfield" type="text" class="InputText" size="4"></td>
    <td class="Label">間距cell spacing</td>
    <td><input name="textfield" type="text" class="InputText" size="4"></td>
  </tr>
</table>
<hr>

<h1>資料標題</h1>
<table cellspacing="0">
  <tr>
    <td><input name="radiobutton" type="radio" value="radiobutton" checked>
      <img src="images/icon_table_HTop.gif" alt="資料標題於上列" onClick="MM_openBrWindow('edit_table.htm','','scrollbars=yes,width=560')">上</td>
    <td><input name="radiobutton" type="radio" value="radiobutton">
      <img src="images/icon_table_HLeft.gif" alt="資料標題於左欄">左</td>
    <td><input name="radiobutton" type="radio" value="radiobutton">
      <img src="images/icon_table_HBoth.gif" alt="資料標題於上及左" border="0">上及左</td>
    <td><input name="radiobutton" type="radio" value="radiobutton">
      <img src="images/icon_table_HNone.gif" alt="無資料標題">無</td>
  </tr>
</table>
<hr>
<h1>無障礙支援</h1>
<table cellspacing="0">
  <tr>
    <td class="Label">表格標題</td>
    <td><input name="textfield" type="text" class="InputText" size="50"></td>
  </tr>
  <tr>
    <td class="Label">表格標題對齊</td>
    <td><select name="select" class="InputSelect">
      <option selected>預設</option>
      <option>齊左</option>
      <option>齊右</option>
      <option>表格上方</option>
      <option>表格下方</option>
                    </select></td>
  </tr>
  <tr>
    <td class="Label">摘要</td>
    <td><textarea name="textfield" cols="50" rows="3" wrap="VIRTUAL" class="InputText"></textarea></td>
  </tr>
</table>
<hr>
<input name="Submit" type="submit" class="InputButton" value="確定">
<input name="Reset" type="reset" class="InputButton" value="取消">
</form>
</body>
</html>
