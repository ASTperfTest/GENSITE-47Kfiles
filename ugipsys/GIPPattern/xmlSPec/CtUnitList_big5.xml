				<refLookup>refBaseDSD</refLookup>
				<rows></rows>
				<cols></cols>
			</field>
			<field>
				<fieldName>deptId</fieldName>
				<fieldLabel>單位</fieldLabel>			
			</field>
			<field>
				<fieldName>nodeCount</fieldName>
				<fieldLabel>項目節點數</fieldLabel>
			
			</field>
			<field>
				<fieldName>itemCount</fieldName>
				<fieldLabel>資料筆數</fieldLabel>
			
			</field>									
		</fieldList>
	</resultSet>
