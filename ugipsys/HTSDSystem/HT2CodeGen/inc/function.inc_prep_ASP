function pkstr(s)
  if trim(s)="" then
    pkstr="null"
  else
    s=trim(s)
    pos = instr(s, "'")
    while pos > 0
      s = mid(s, 1, pos) & "'" & mid(s, pos + 1)
      pos = instr(pos + 2, s, "'")
    wend
    pkstr="'" & s & "'"
  end if
end function

