function multi(tstr)
  dim outstr()
  to_no=1
  while len(tstr) > 0
    pos=instr(tstr, ",")
    if pos = 0 then
      redim preserve outstr(to_no)
      outstr(to_no) = tstr
      tstr = ""
    else
      redim preserve outstr(to_no)
      outstr(to_no) = left(tstr, pos-1)
      tstr=trim(mid(tstr, pos+1))
      to_no=to_no+1
    end if
  wend
  multi = outstr
end function

 