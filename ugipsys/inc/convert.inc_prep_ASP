function yearname(year)
 dim y, d1, d2, d3, c, ret
 
 if isnull(year) then
  yearname = ""
  exit function
 end if
 
 y = cint(year)
 d1 = y \ 100
 d2 = (y - d1 * 100) \ 10
 d3 = (y - d1 * 100 - d2 * 10)
  
 c = "零一二三四五六七八九"
 ret = ""
 if d1 > 0 then
  ret = mid(c, d1+1, 1) & "百"
 end if
 if d2 > 0 then
  ret = ret & mid(c, d2+1, 1) & "十"
 elseif d3 > 0 then
  ret = ret & mid(c, d2+1, 1)
 end if
 if d3 > 0 then
  ret = ret & mid(c, d3+1, 1)
 end if
 
 yearname = ret 
end function

