sub addvalue(src, value)
 dim a, found, i
 
 a = split(src, ",", -1, 1)
 found = false
 for i = 0 to ubound(a)
  if a(i) = value then
   found = true
   exit for
  end if
 next
 if not found then
  if src = "" then
   src = value
  else
   src = src & "," & value
  end if
 end if
end sub

sub addvalue1(src, value)
 dim a, found, i
 
 a = split(src, "、", -1, 1)
 found = false
 for i = 0 to ubound(a)
  if a(i) = value then
   found = true
   exit for
  end if
 next
 if not found then
  if src = "" then
   src = value
  else
   src = src & "、" & value
  end if
 end if
end sub

