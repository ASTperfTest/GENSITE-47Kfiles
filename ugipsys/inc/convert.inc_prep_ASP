function serialno(no)
 dim y, d1, d2, d3, c, ret
 
 if isnull(no) then
  serialno = ""
  exit function
 end if
  
 c = "○一二三四五六七八九"
 ret = ""
 for i=1 to len(no)
  subno = cint(mid(no,i,1))/1 
  ret = ret & mid(c,subno+1,1)  
 next
