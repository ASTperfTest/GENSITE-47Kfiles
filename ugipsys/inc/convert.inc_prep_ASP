function chinesemoney(n)
 dim c, d1,d2,d3,d4,d5, w, ret
 if isnull(n) then
  chinesemoney = ""
  exit function
 end if
 
 c = "壹貳參肆伍陸柒捌玖"
 
  y = cint(n)
 d1 = y \ 10000
 d2 = (y - d1 * 10000) \ 1000
 d3 = (y - d1 * 10000 - d2 * 1000)\100
 d4 = (y - d1 * 10000 - d2 * 1000 - d3 * 100)\10
 d5 = (y - d1 * 10000 - d2 * 1000 - d3 * 100 - d4 * 10)
  
 ret = ""
 if d1 > 0 then
  ret = mid(c, d1, 1) & "萬"
  if d2 = 0 and (d3<>0 or d4<>0 or d5<>0) then
   ret = ret & "零"
  end if
 end if
 if d2 > 0 then
  ret = ret & mid(c, d2, 1) & "仟"
  if d3 = 0 and (d4<>0 or d5<>0) then
   ret = ret & "零"
  end if
 end if
 if d3 > 0 then
  ret = ret & mid(c, d3, 1) & "百"
  if d4 = 0 and  d5<>0 then
   ret = ret & "零"
  end if
 end if 
 if d4 > 0 then
  ret = ret & mid(c, d4, 1) & "十"
 end if 
 if d5 > 0 then
  ret = ret & mid(c, d5, 1)
 end if
 ret = ret & "元整"
 chinesemoney = ret
 
end function



