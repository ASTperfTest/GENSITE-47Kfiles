<%

 Set RSreg = Server.CreateObject("ADODB.RecordSet")
 fSql=Request.QueryString("strSql")

if fSql="" then
	fSql = "SELECT htx.*, m.account, m.realname" _
		& ", (SELECT count(*) FROM memEPaper WHERE memEPaper.memID=m.account) AS memEPCount " _
		& " FROM EpSend AS htx LEFT JOIN Member AS m ON htx.email=m.email" _
		& " WHERE htx.ePubID=" & pkstr(request("ePubID"),"") _
		& " ORDER BY htx.email"
end if

