sub doupdatedb()
 sql = "update htddb set "
  sql = sql & "dbname=" & pkstr(request("htx_dbname"),",")
  sql = sql & "dbdesc=" & pkstr(request("htx_dbdesc"),",")
  sql = sql & "dbip=" & pkstr(request("htx_dbip"),",")
 sql = left(sql,len(sql)-1) & " where dbid=" & pkstr(request.querystring("dbid"),"")

 conn.execute(sql)  
end sub '---- doupdatedb() ----

