     elseif wtparray(2,i)="d" then '----�r������
  sqldelete="delete cudtkeywordwtp where ikeyword='"+wtparray(0,i)+"'"    
  set rsd=conn.execute(sqldelete)  
     end if
     writeflag=false
     exit for
 end if
    next
    if writeflag then xfout.writeline trim(xinstr) 
loop

